---
type Props = {
  href: string
  external?: boolean
}

const { href, external, ...rest } = Astro.props
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  class="inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-white transition-colors duration-300 ease-in-out"
  {...rest}
>
  <slot />
</a>
